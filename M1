import subprocess
import requests
import sys

# تحقق من وجود مكتبات الضرورية
try:
    import requests
except ModuleNotFoundError:
    subprocess.run(['pip', 'install', 'requests'])

# رابط جيتهاب الذي يحتوي على كلمات المرور
GITHUB_URL = "https://raw.githubusercontent.com/SASITR/HKFBOGD/main/HTDODJD"

def check_password(password):
    try:
        response = requests.get(GITHUB_URL)
        response.raise_for_status()
        passwords = response.text.splitlines()
        return password in passwords
    except requests.RequestException as e:
        print(f"خطأ في الاتصال: {e}")
        return False

def main():
    # استخدام subprocess لتشغيل الرابط
    subprocess.run(['xdg-open', 'https://www.facebook.com/profile.php?id=100087546249274&mibextid=ZbWKwL'])

    # طلب كلمة مرور من المستخدم
    password = input('أدخل كلمة المرور: ').strip()

    # التحقق من كلمة المرور
    if check_password(password):
        print('كلمة المرور صحيحة. يتم تشغيل السكربت الرئيسي...')
        # هنا يمكنك تشغيل السكربت الآخر أو تنفيذ أي عملية أخرى
        # مثلا:
        # subprocess.run(['python', 'main_script.py'])
    else:
        print('كلمة المرور غير صحيحة.')

if __name__ == "__main__":
    main()
