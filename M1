import os
import sys
import requests

# فتح رابط في المتصفح
def open_url(url):
    os.system(f'xdg-open {url}')  # يستخدم على نظام لينكس/أندرويد. استخدم 'start {url}' على نظام ويندوز.

# التحقق من وجود مكتبات معينة وتثبيتها إذا لم تكن موجودة
def check_and_install_libraries():
    try:
        import requests
    except ModuleNotFoundError:
        print("مكتبة 'requests' غير مثبتة. يرجى تثبيتها عبر الأمر: pip install requests")
        sys.exit()

# التحقق من المعرف ضد ملف نصي على الإنترنت
def validate_id():
    uuid = str(os.geteuid()) + str(os.getlogin())  # الحصول على المعرف الفريد
    response = requests.get("https://raw.githubusercontent.com/SASITR/HKFBOGD/main/HTDODJD")
    response.raise_for_status()  # تأكد من نجاح الطلب
    ids = response.text.splitlines()

    if uuid in ids:
        print("المعرف صحيح.")
    else:
        print(f"المعرف غير موجود: {uuid}")
        sys.exit()

# النقطة الرئيسية لتنفيذ السكربت
def main():
    check_and_install_libraries()
    open_url("https://www.facebook.com/profile.php?id=100087546249274&mibextid=ZbWKwL")
    validate_id()

if __name__ == "__main__":
    main()
