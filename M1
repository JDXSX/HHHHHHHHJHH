import time

# كلمة السر الصحيحة
password = "xxx"

# عدد المحاولات المسموح بها قبل الحظر
max_attempts = 3
# مدة الحظر بالثواني
ban_duration = 2

# عدد المحاولات الحالية
attempts = 0

while True:
    # طلب كلمة السر من المستخدم
    user_password = input("ﺮﺴﻟﺍ ﺔﻤﻠﻛ ﻞﺧﺩﺍ: ")

    if user_password == password:
        print("ﺮﺳ ﺔﻤﻠﻛ ﻪﺤﻴﺤﺻ")
        break  # الخروج من الحلقة إذا كانت كلمة السر صحيحة
    else:
        # زيادة عدد المحاولات
        attempts += 1
        if attempts >= max_attempts:
            print(f"ﺔﺌﻃﺎﺧ ﺮﺴﻟﺍ ﺔﻤﻠﻛ ﻝﺎﺧﺩﺍ ﻲﺑ ﺖﻤﻗ ﺮﻳﺬﺤﺗ {ban_duration}.")
            time.sleep(ban_duration)  # حظر المستخدم لمدة دقيقة
            attempts = 0  # إعادة تعيين عدد المحاولات بعد انتهاء الحظر
        else:
            print(f"ﺮﺳ ﺔﻤﻠﻛ ﻂﻠﻏ {max_attempts - attempts}.")
